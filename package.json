{
  "name": "kdb-md",
  "displayName": "kdb.md",
  "description": "Markdown knowledge database",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "kdbTodo.enableCodeLens": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/snippets.code-snippets"
      }
    ],
    "keybindings": [
      {
        "command": "kdbTodo.onKeyPressEnter",
        "key": "shift+enter",
        "when": "editorTextFocus && resourceLangId == markdown && !vim.mode || editorTextFocus && resourceLangId == markdown && vim.mode == 'Insert'"
      }
    ],
    "commands": [
      {
        "command": "kdbTodo.markDone",
        "title": "Mark done"
      },
      {
        "command": "kdbTodo.markInProgress",
        "title": "Set in progress"
      },
      {
        "command": "kdbTodo.markBlocked",
        "title": "Set blocked"
      },
      {
        "command": "kdbTodo.postpone",
        "title": "Postpone"
      }
    ],
    "submenus": [
      {
        "id": "kdbTodo.submenu",
        "label": "Todo"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "kdbTodo.submenu",
          "group": "1_modification"
        }
      ],
      "kdbTodo.submenu": [
        {
          "command": "kdbTodo.markDone"
        },
        {
          "command": "kdbTodo.markInProgress"
        },
        {
          "command": "kdbTodo.markBlocked"
        },
        {
          "command": "kdbTodo.postpone"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
